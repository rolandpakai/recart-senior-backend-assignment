  "scripts": {
    "start": "node -r dotenv/config ./dist/index.js dotenv_config_path=./.env",
    "build": "tsc --build tsconfig.json",
    "test": "jest",
    "test:coverage": "jest --coverage --silent",
    "test:watch": "jest --watchAll",
