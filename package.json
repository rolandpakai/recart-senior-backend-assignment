    "@types/node": "22.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "dotenv": "16.4.7",
    "eslint": ">= 8",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-watch-typeahead": "2.2.2",
    "nodemon": "3.1.9",
    "supertest": "7.0.0",
